#!/usr/local/bin/fontforge -script
# vim:set ts=8 sts=4 sw=4 tw=0:
#
# Last Change: 23-Jan-2005.
# Maintainer:  MURAOKA Taro <koron@tka.att.ne.jp>

filename = ""
if ($argc > 1)
    filename = $argv[1]
endif
if (filename == "")
    Print("ERROR: Require filename.")
endif

input = filename + ".sfd"
output = filename + ".ttf"

Print("Loading: " + input);
Open(input)
Print("Writing: " + output);
Generate(output, "", 0)

